{{!-- <div class="alert alert-warning">Your work will not automatically be saved. Do not close this page before submitting.</div> --}}
<h1>{{model.testInfo.name}}</h1>
{{#each testContent.questions as |question|}}
  <h2>Question {{question.number}}</h2>
  <div class="question hyphenate">
    {{markdown-component markdown=question.question}}
  </div>
  <h3>Answer</h3>
  <div class="row">
    <div class="col-md-6">
      <div class="heading-note">You can use markdown</div>
      {{markdown-editor value=question.answer rows="6"}}
    </div>
    <div class="col-md-6 answer-html">
      {{markdown-component markdown=question.answer}}
    </div>
  </div>
{{/each}}
<hr>
<div class="row form-group">
  <div class="col-sm-3"></div>
  <div class="col-sm-3"></div>
  <div class="col-sm-3"></div>
  <div class="col-sm-3">
    <button class="btn btn-block btn-primary" {{action 'submit'}} >Submit</button>
  </div>
</div>